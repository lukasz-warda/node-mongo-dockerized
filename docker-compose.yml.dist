version: '3'

services:
  #MongoDB service
  mongo:
    container_name: mongo
    image: mongo:latest
    restart: always
    volumes:
      - mongo_db:/data/db
    ports:
      - "<host>:27017:27017"
  #Node API service
  api:
    container_name: node
    build: .
    ports:
     - "<host>:80:8000"
    volumes:
      - .:/usr/src/app
    environment:
      NODE_ENV: dev

    depends_on:
      - mongo

volumes:
  mongo_db: {}